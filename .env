# 🏥 HOSPITAL MANAGEMENT SYSTEM - CONFIGURACIÓN
# ==============================================

# 🔧 MODO DE DESARROLLO/PRODUCCIÓN
# true = Desarrollo (sin seguridad, acceso libre)
# false = Producción (con seguridad completa)
#DEVELOPMENT_MODE=true

# 🛡️ SEGURIDAD HABILITADA
# true = Middleware de seguridad activo
# false = Middleware bypass (solo desarrollo)
#SECURITY_ENABLED=false

# ⏰ CONFIGURACIÓN DE SESIÓN
# Tiempo en minutos antes de que expire la sesión
SESSION_TIMEOUT_MINUTES=60

# 🔐 CONFIGURACIÓN JWT (si necesitas)
JWT_SECRET_KEY=your-super-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 🗄️ BASE DE DATOS (para cuando deploys)
DATABASE_URL=postgresql://user:password@localhost:5432/hospital_db

# 📡 MICROSERVICIOS (URLs CORRECTAS)
# OAuth2 está en el GATEWAY, no en puerto separado
GATEWAY_SERVICE_URL=http://localhost:8090
OAUTH2_TOKEN_URL=http://localhost:8090/oauth2/password-token
OAUTH2_USER_INFO_URL=http://localhost:8090/api/usuarios/users

# 🚀 CONFIGURACIÓN DE DEPLOY
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 🌐 CORS (para frontend)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# 📊 MONITORING (opcional)
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# ==============================================
# 📝 INSTRUCCIONES:
# 
# 🔧 PARA DESARROLLO:
# DEVELOPMENT_MODE=true
# SECURITY_ENABLED=false
# 
# 🛡️ PARA PRODUCCIÓN:
# DEVELOPMENT_MODE=false
# SECURITY_ENABLED=true
# 
# 🚀 PARA DEPLOY (Railway/Render):
# Configurar estas variables en el dashboard
# ==============================================